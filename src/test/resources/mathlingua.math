
[\a.b{A}]
Defines: X
when: 'A is \something'
means:
. 'X is \something.else.alias'
using:
. '\something.else.alias := \something.else'
written: "a.b of $A?$"


[\x.y:of{Z}]
Defines: Z := (X, Y)
when: 'Z is \something'
means: 'Z is \something.else'


[\p.q]
Defines: (X, Y)
when: 'Z is \something'
means: 'Z is \something.else'


[\some.function1(x)]
Defines: f(x)
means: 'f is \function'
evaluated:
. 'f(x) := x + 1'


[\some.function2(x)]
Defines: f(x)
means: 'f is \function:on{\real}to{\real}'
evaluated:
. piecewise:
  when: 'x > 0'
  then: 'f(x) := 1'
  when: 'x < 0'
  then: 'f(x) := -1'
  else: 'f(x) := 0'


[\some.function3(x)]
Defines: f(x)
means: 'f is \function:on{\natural}to{\natural}'
evaluated:
. matching:
  . 'f(\nat.0) ::= 1'
  . 'f(\nat.succ(x?)) ::= x - 1'


[\natural]
Defines: N
means: 'N is \set'
evaluated:
. inductively:
  from:
  . constant: 0
  . constructor: succ(x)
    from: '\natural'


[\primes]
Defines: P
means: 'P is \set'
evaluated:
. collection:
  of: 'p'
  in: '\natural'
  for: p
  where: 'p is \prime'


[a + b]
Evaluates:
when: 'a, b is \natural'
to: 'a \natural.+ b'
when: 'a, b is \real'
to: 'a \real.+ b'
else: 'a \complex.+ b'


Foundation:
. [\natural]
  Defines: N
  means: "The set of natural numbers"


Mutually:
. [\odd]
  Defines: Odd
  means: 'Odd is \Set'
  evaluated:
  . inductively:
    from:
    . constant: 0
    . constructor: next(x)
      from: '\odd'
. [\even]
  Defines: Even
  means: 'Even is \Set'
  evaluated:
  . inductively:
    from:
    . constant: 1
    . constructor: next(x)
      from: '\even'


[x \nat.< y]
States:
when: 'x, y is \nat'
that:
. '\nat.zero \nat.< y'
. if: 'x \nat.< y'
  then: 'x + 1 \nat.< y + 1'
using:
. 'x + y := x \nat.+ y'


[\group.to.set]
Views: G := (X, *, e)
from: '\group'
to: '\set'
as: 'X'


Axiom:
given: X
where: 'X is \set'
then:
. exists: x
  suchThat: 'x \in X'


Conjecture:
given: n
where:
. 'n is \integer'
. 'n > 2'
then:
. exists: p1, p2
  where: 'p1, p2 is \prime'
  suchThat:
  . 'n = p1 + p2'


Theorem:
given: n
where:
. 'n is \integer'
. 'n > 2'
then:
. not:
  . exists: x, y, z
    where: 'x, y, z is \integer'
    suchThat:
    . 'x, y, z \neq 0'
    . 'x^n + y^n = z^n'
using:
. 'x^n := x \natural.^ n'
