[\some.function{A}(x)]
Defines: f(x)
where: 'f is \function'
when: 'A is \something'
maps:
. from: '\reals'
  to: '\reals'
written: "\textrm{some.function}(x?)"


[\integers]
Defines: Z := (X, +)
instantiated:
. 'X := \set'
. 'x + y := x \integer.+ y'
written: "\mathbb{Z}"


[\naturals]
Defines: N
where: 'N is \type'
generated:
. inductively:
  from:
  . constant: 0
  . constructor: succ(x)
    from: '\natural'
written: "\mathbb{N}"


[\even.primes]
Defines: X
where: 'X is \set'
collects:
. given: p
  where: 'p is \prime'
  all: 'p'
  suchThat: 'p is \even'
written: "\textbf{even primes}"


[\f1(x)]
Defines: f(x)
where: 'f is \function'
evaluated: 'f(x) := x + 1'
written: "f1(x?)"


[\f2(x)]
Defines: f(x)
where: 'f is \function'
evaluated:
. matching:
  . 'f(x?) ::= x + 1'
written: "f2(x?)"


[\f3(x)]
Defines: f(x)
where: 'f is \function'
evaluated:
. piecewise:
  when: 'x > 0'
  then: 'f(x) := 1'
  when: 'x < 0'
  then: 'f(x) := -1'
  else: 'f(x) := 0'
written: "f3(x?)"


